<%- include('header') -%>

<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Log in for existing user</span>
            <% if(locals.logout) {%>
                <div class="alert alert-success text-center">
                    <%= logout %>
                    <!-- <Logout successfully..> -->
                </div>
            <% } %>
        </div>
        <form action="/route/login" method="post" class="pt-2">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="email" name="email">
                <small class="form-text" id="txt">Register email address here</small>
            </div>

            <div class="form-group">
                <input type="password" class="form-control" placeholder="password" name="password">
            </div>

            <button type="submit" class="btn btn-success rounded-pill" style="margin: 10px;">Submit</button>
        </form>
    </div>
</div>

<%- include('footer') -%>
